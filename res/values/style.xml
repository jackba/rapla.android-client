<?xml version="1.0" encoding="utf-8"?>
<resources>

    <color name="CustomTitleBarSeperatorBackground">#FFFFFF</color>
    <color name="WindowBackground">#CCCCCC</color>
    <color name="CustomDialogBackground">#FFFFFF</color>

    <style name="CustomTheme" parent="android:Theme">
        <item name="android:windowTitleBackgroundStyle">@style/CustomTitleBarBackgroundStyle</item>
        <item name="android:windowTitleStyle">@style/CustomTitleBarStyle</item>
        <item name="android:windowTitleSize">45dp</item>
        <item name="android:windowBackground">@drawable/window_background</item>
        <item name="android:textColor">#555555</item>
    </style>

    <style name="CustomDialogTheme" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/CustomDialogBackground</item>
        <item name="android:windowTitleBackgroundStyle">@style/CustomDialogThemeBackgroundStyle</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:textColor">@color/CustomDialogBackground</item>
    </style>

    <style name="CustomDialogThemeBackgroundStyle">
        <item name="android:background">@color/CustomDialogBackground</item>
    </style>

    <style name="CustomTitleBarBackgroundStyle">
        <item name="android:background">@drawable/title_bar_background</item>
    </style>

    <style name="CustomTitleBarStyle">
        <item name="android:textAppearance">@style/CustomTitleBarTextStyle</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="CustomTitleBarTextStyle" parent="android:TextAppearance.WindowTitle">
        <item name="android:textSize">20dip</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="ButtonBar">
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:background">#AAAAAA</item>
        <item name="android:padding">3dip</item>
        <item name="android:layout_marginTop">5dip</item>
    </style>

    <style name="LoginInputField">
        <item name="android:layout_marginBottom">10dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">fill_parent</item>
    </style>

    <style name="OuterLayout">
        <item name="android:paddingLeft">10dip</item>
        <item name="android:paddingRight">10dip</item>
        <item name="android:paddingTop">10dip</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
    </style>

</resources>